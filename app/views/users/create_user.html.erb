<div class="container">
  <% if flash.present? %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  <% end %>
  <%= form_for :user, url: users_path do |f| %>
      <fieldset>
        <label>Name</label>
        <%= f.text_field :name, value: @name, placeholder: "Enter name" %>
        <label>Email</label>
        <%= f.text_field :email, value: @email, placeholder: "Enter email" %>
        <label>Phone number</label>
        <%= f.text_field :phone_number, value: @phone_number, placeholder: "Enter phone number" %>
        <label>Address</label>
        <%= f.text_field :address, value: @address, placeholder: "Enter address" %>
        <label>Hobbies</label>
        <%= f.text_field :hobbies, value: @hobbies, placeholder: "Enter hobbies" %>
      </fieldset>
      <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
